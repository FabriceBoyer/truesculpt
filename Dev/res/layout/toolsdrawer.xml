<merge xmlns:android="http://schemas.android.com/apk/res/android">
 	
	<SlidingDrawer 
		android:layout_width="wrap_content" 
		android:id="@+id/toolsSlidingDrawer" 
		android:layout_gravity="bottom"
		android:orientation="vertical"
		android:handle="@+id/toolsSlideHandleButton" 
		android:content="@+id/contentLayout"
		android:layout_height="250dip"
		android:background="@android:color/transparent">
		
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/toolsSlideHandleButton" android:background="@drawable/tab"></Button>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/contentLayout"	        
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"	        
	        android:stretchColumns="*">	   
		    
		    <TableRow>                
			  <ToggleButton android:textOn="@string/view"  android:textOff="@string/view" android:id="@+id/View" android:layout_width="fill_parent" android:layout_height="wrap_content"></ToggleButton>
			  <ToggleButton android:textOn="@string/sculpt"  android:textOff="@string/sculpt" android:id="@+id/Sculpt" android:layout_width="fill_parent" android:layout_height="wrap_content"></ToggleButton>
			  <ToggleButton android:textOn="@string/paint"  android:textOff="@string/paint" android:id="@+id/Paint" android:layout_width="fill_parent" android:layout_height="wrap_content"></ToggleButton>
			</TableRow>
			
	        <TableRow>			
			 	<Spinner android:layout_height="50dip" android:id="@+id/SculptToolSpinner" android:layout_width="50dip" style="@style/SpinnerAsEditText"></Spinner>
			 	<truesculpt.ui.views.ColorShowView android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/ColorShowView"></truesculpt.ui.views.ColorShowView>
		 		<Spinner android:layout_height="50dip" android:id="@+id/PaintingToolSpinner" android:layout_width="50dip" style="@style/SpinnerAsEditText"></Spinner>
			</TableRow>       

			<TableRow>  
			    <ImageButton android:scaleType="fitCenter" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/UndoBtn" android:src="@drawable/undo"></ImageButton>
			    <ImageButton android:scaleType="fitCenter" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/HistoryBtn" android:src="@drawable/clock"></ImageButton>			 
			 	<ImageButton android:scaleType="fitCenter" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/RedoBtn" android:src="@drawable/redo"></ImageButton>
		 	</TableRow>
		 	
		 	<TableRow>			
			 	<truesculpt.ui.views.SliderPickView android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/RadiusPicker"></truesculpt.ui.views.SliderPickView>
			 	<truesculpt.ui.views.SliderPickView android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/StrengthPicker"></truesculpt.ui.views.SliderPickView>
			</TableRow> 
		 	
	   </TableLayout>   
	</SlidingDrawer>
</merge>