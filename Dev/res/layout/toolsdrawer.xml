<merge xmlns:android="http://schemas.android.com/apk/res/android">
 	
	<SlidingDrawer 	
		android:id="@+id/toolsSlidingDrawer" 
		android:layout_gravity="bottom"
		android:orientation="horizontal"
		android:handle="@+id/toolsSlideHandleButton" 
		android:content="@+id/contentLayout"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" 
		android:background="@android:color/transparent">
		
		<Button android:layout_width="0px" android:layout_height="0px" android:id="@+id/toolsSlideHandleButton"></Button>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/contentLayout"
			android:gravity="left"	        
	        android:layout_width="50dip"
	        android:layout_height="fill_parent"	  
	        android:orientation="vertical"
	        >	   			
		
			 	<truesculpt.ui.views.ToolPickerView android:layout_marginBottom="8dip" android:layout_height="50dip"  android:layout_width="50dip" android:id="@+id/SculptToolPicker"></truesculpt.ui.views.ToolPickerView>
			 	<truesculpt.ui.views.ColorShowView android:layout_marginBottom="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/ColorShowView"></truesculpt.ui.views.ColorShowView>
		
			 	<truesculpt.ui.views.SliderPickView android:layout_marginBottom="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/RadiusPicker"></truesculpt.ui.views.SliderPickView>
			 	<truesculpt.ui.views.SliderPickView android:layout_marginBottom="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/StrengthPicker"></truesculpt.ui.views.SliderPickView>
			 	    
			 	<ToggleButton android:layout_marginBottom="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/SymmetrySwitcher" android:textOn="" android:textOff="" android:background="@drawable/symmetry_switcher_selector"></ToggleButton>
				
				<ImageButton android:scaleType="fitCenter" android:padding="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/ResetPOVBtn" android:src="@drawable/xeyes" android:background="@android:color/transparent" ></ImageButton>
			    <ImageButton android:scaleType="fitCenter" android:padding="5dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/UndoBtn" android:src="@drawable/undo" android:background="@android:color/transparent"></ImageButton>
			 	<ImageButton android:scaleType="fitCenter" android:padding="5dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/RedoBtn" android:src="@drawable/redo" android:background="@android:color/transparent"></ImageButton>			 	
			 	
			 	<ImageButton android:scaleType="fitCenter" android:padding="8dip" android:layout_height="50dip" android:layout_width="50dip" android:id="@+id/FilesBtn" android:src="@drawable/save" android:background="@android:color/transparent"></ImageButton>
		 	
	   </LinearLayout>   
	</SlidingDrawer>
</merge>